// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Profile {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 基本信息
  name          String
  nameEn        String? // 英文名/拼音
  title         String // 职位/角色
  email         String
  phone         String  // 电话（必填）
  location      String?
  gender        String // 性别：男、女
  age           Int? // 年龄
  avatar        String?
  summary       String? // 个人简介

  // 社交链接
  github        String?
  website       String?

  // 技能
  skills        String? // 数组格式存储技能 (JSON string)

  // 工作经历
  experiences   String? // 数组格式存储工作经历 (JSON string)

  // 最高学历背景
  education     String? // 单个对象存储教育经历 (JSON string)

  // 项目经验
  projects      String? // 数组格式存储项目 (JSON string)

  // 其他
  certifications String? // 证书 (JSON string)
  languages      String? // 语言能力 (JSON string)
}
